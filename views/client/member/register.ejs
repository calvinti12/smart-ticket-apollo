                    </div>
                    <div class="form-group ">
                        <label class="left_30">Password</label>
                        <input type="password" class="form-control" id='password' name="password" required="" >
                    </div>
                    <div class="form-group">
                        <label class="left_30"  >Nhập lại Password</label>
                        <input type="password" class="form-control" id="passwordConf" name="confirmPassword">
                    </div>
                    <div class="row">
                        <div class="form-group inf col-6">
                            <label>Ảnh đại diện</label>
                            <input type="file" class="form-control btn-info btn-sm" style="" name="image">
                            <img src="" alt="" id="image-preview" style="width: 100px">
                            <input type="hidden" name="avatarUrl"  >
                        </div>
                        <div class="form-group inf col-6">
                            <p>Vị trí của bạn</p>
                            <a onclick="getLocation()" class="btn-outline-info btn-sm btn" style="letter-spacing: 3px;">Lấy vị trí</a>
                            <p id="located"></p>
                            <script>
                                var x = document.getElementById("located");
                                function getLocation() {
                                    if (navigator.geolocation) {
                                        navigator.geolocation.getCurrentPosition(showPosition);
                                    } else {
                                        x.innerHTML = "Geolocation không được hỗ trợ bởi trình duyệt này.";
                                    }
                                }
                                function showPosition(position) {
                                    x.innerHTML = "Vĩ độ: " + position.coords.latitude +
                                        "<br>Kinh độ: " + position.coords.longitude;
                                }
                            </script>
                        </div>
                    </div>

                </div>
                <div class="flex_form_right"> <!-- Thông tin cá nhân -->
                    <h3>Thông tin cá nhân:</h3>
                    <br>
                    <div class="form-group ">
