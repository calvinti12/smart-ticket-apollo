<div class= "container" style="margin-bottom: 2em" >
    <form action="/members/register" method="post" id="login" onsubmit="event.preventDefault(); validateMyForm();">
        <div class="card" data-aos="fade-up" data-aos-duration="1500" style="color: white; background-color: rgba(0,0,0,0.5) !important">
            <div class="card-header" style="text-align: center">
