                    <td><button id="sobtnmi"><i class="fas fa-minus"></i></button><label id="soon"></label><button id="sobtnpl" ><i class="fas fa-plus"></i></button></td>
                </tr>
                <tr>
                    <td>Combo 5 vé</td>
                    <td><span id="fipr"><%=obj.price*0.9%></span> VNĐ</td>
                    <td><button id="fibtnmi"><i class="fas fa-minus"></i></button><label id="five" ></label><button id="fibtnpl"><i class="fas fa-plus"></i></button></td>
