                <tbody>
                <tr><td><strong>Loại vé</strong></td><td style="text-align: right"><strong>Số lượng</strong></td></tr>
                <tr style="font-size: 0.8em">
                    <td>
                        <p id="typeticket"></p>
                    </td>
                    <td style="text-align: right">
                        <p id="numb" ></p>
                    </td>
                </tr>
                <tr style="background-color: gainsboro ">
                    <td><strong>Tổng cộng</strong></td>
                    <td style="text-align: right"><strong id="amount"></strong> VNĐ</td>

                </tr>
                </tbody>
            </table>
